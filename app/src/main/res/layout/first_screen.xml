<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actvities.FirstScreenActivity">

    <Button
        android:id="@+id/startTest"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="@string/start"
        app:layout_constraintBaseline_toBaselineOf="@+id/startCalib"
        app:layout_constraintEnd_toStartOf="@+id/startCalib"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/info"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311" />

    <Button
        android:id="@+id/loadLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:onClick="startResultActivity"
        android:text="@string/loadLastResult"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/startCalib" />

    <Button
        android:id="@+id/startCalib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startCalibration"
        android:text="@string/startCalibration"
        app:layout_constraintBaseline_toBaselineOf="@+id/loadLast"
        app:layout_constraintEnd_toStartOf="@+id/loadLast"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/startTest" />
</androidx.constraintlayout.widget.ConstraintLayout>